<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    @using VendorTracker.Models
  </head>
  <body>
    <div class="container">
      <h1>Your Vendors</h1>
      @if (@Model.Count == 0)
      {
        <div class="text-center m-4">
          <h3>You haven't added any vendors yet! Click the button bellow to add one.</h3>
        </div>
      }
        @foreach (Vendor vendor in Model)
        {
          <div class="row justify-content-center m-4">
            <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
          </div>
        }
      <div class="text-center">
        <a href="/vendors/new"><button class="btn btn-primary">Add Vendor</button></a>
      </div>
    </div>
  </body>
</html>